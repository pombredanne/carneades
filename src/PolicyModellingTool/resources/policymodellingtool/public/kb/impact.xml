<lkif>
    
    <theory id="Verwaiste_Werke">
        <rules>
            
            <rule id="EffektOeffentlicheZugaenglichmachung">
                <head>
                    <s pred="hatAnspruchOeffentlicheZugaenglichmachung">
                        <v>Person</v>
                        <v>Werk</v>
                    </s>
                </head>
                <body>
                    <and>
                        <s pred="hatName">
                            <v>Person</v>
                        </s>
                        <s pred="betrifftWerk">
                            <v>Werk</v>
                        </s>
                        <s pred="istVerwaist">
                            <v>Werk</v>
                        </s>
                    </and>
                </body>
            </rule>
            
            <rule id="VerwaistRegel">
                <head>
                    <s pred="istVerwaist">
                        <v>Werk</v>
                    </s>
                </head>
                <body>
                    <s pred="ausreichendeSuche">
                        <v>Werk</v>
                    </s>
                </body>
            </rule>
            
            <rule id="SucheRegel">
                <head>
                    <s pred="ausreichendeSuche">
                        <v>Werk</v>
                    </s>
                </head>
                <body>
                    <and>
                        <or>
                            <and>
                                <s pred="zumZweck">
                                    <v>Werk</v>
                                    <c>non_commercial</c>
                                </s>
                                <s pred="UrheberSuche">
                                    <c>Standard</c>
                                </s>
                            </and>
                            <and>
                                <s pred="zumZweck">
                                    <v>Werk</v>
                                    <c>commercial</c>
                                </s>
                                <s pred="UrheberSuche">
                                    <c>Professional</c>
                                </s>
                                <s pred="Bekanntmachung">
                                    <c>Public</c>
                                </s>
                            </and>
                        </or>
                        <s pred="valid">
                            <c>Policy_Aktionsbuendnis_Urheberrecht_fuer_Bildung_und_Wissenschaft</c>
                        </s>
                    </and>
                </body>
            </rule>
            
        </rules>        
    </theory>
    
</lkif>