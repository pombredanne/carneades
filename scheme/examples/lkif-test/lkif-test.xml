<lkif xmlns:family="http:://fokus.fraunhofer.de/elan/estrella/family.owl"
    xmlns:foods="http:://fokus.fraunhofer.de/elan/estrella/food.owl"
    xmlns:smith="http:://fokus.fraunhofer.de/elan/estrella/smith.owl">
    <sources>
        <source element="s1" uri="http://www.foo.de/foo"/>
        <source element="s2" uri="http://www.bar.com"/>
    </sources>
    <theory id="rb1">
		<axioms>
			<axiom id="a1">
				<s pred="family:ancestor"><i value="Peter">Peter</i> is an ancestor of <i value="Paul">Paul</i>.</s>
			</axiom>
			<axiom id="a2">
				<s pred="family:ancestor"><i value="Paul">Paul</i> is an ancestor of <i value="Pascal">Pascal</i>.</s>
			</axiom>
		</axioms>
        <rules>
            <rule id="r1">
                <head>
                    <s pred="goods"><v>c</v> is goods.</s>
                </head>
                <body>
					<and>
						<s pred="movable"><v>c</v></s>
						<not exception="true">
							<s pred="money"><v>c</v></s>
						</not>
					</and>
                </body>
            </rule>
            <rule id="r3">
                <head>
                    <s pred="money"><v>x</v></s>
                </head>
                <body>
                    <s pred="coins"><v>x</v></s>
                </body>
            </rule>
			<rule id="r4">
				<head>
					<and>
						<s pred="light"><v>x</v></s>
						<s pred="shipable"><v>x</v></s>
					</and>
				</head>
				<body>
					<s pred="movable"><v>x</v></s>
				</body>
			</rule>
			<rule id="r5">
				<head>
					<and>
						<s pred="light"><v>x</v></s>
						<s pred="shipable"><v>x</v></s>
					</and>
				</head>
				<body>
					<s pred="convenient"><v>x</v></s>
				</body>
			</rule>
			<rule id="lex-posterior" strict="true">
				<head>
					<s pred="prior"><v>r2</v><v>r1</v></s>
				</head>
				<body>
					<and>
						<s pred="enacted"><v>r1</v><v>d1</v></s>
						<s pred="enacted"><v>r2</v><v>d2</v></s>
						<s pred="later"><v>d2</v><v>d1</v></s>
					</and>
				</body>
			</rule>
			<rule id="r6">
				<head>
					<not>
						<s pred="goods"><v>x</v></s>
					</not>
				</head>
				<body>
					<s pred="edible"><v>x</v></s>
				</body>
			</rule>
			<rule id="r14">
				<head>
					<s pred="flies"><v>x</v></s>
				</head>
				<body>
					<s pred="bird"><v>x</v></s>
				</body>
			</rule>
			<rule id="r15" strict="true">
				<head>
					<s pred="excluded">
						<c>r14</c>
						<s pred="flies"><v>x</v></s>
					</s>
				</head>
				<body>
					<s pred="penguin"><v>x</v></s>
				</body>
			</rule>			
			<rule id="repeal">
				<head>
					<not>
						<s pred="valid"><v>r</v></s>
					</not>
				</head>
				<body>
					<s pred="repealed"><v>r</v></s>
				</body>
			</rule>
			<rule id="r19">
				<head>
					<s pred="p3"><v>x</v></s>
				</head>
				<body>
					<or>
						<s pred="p1"><v>x</v></s>
						<s pred="p2"><v>x</v></s>
					</or>
				</body>
			</rule>
			<rule id="r20">
				<head>
					<s pred="p9"><v>x</v></s>
				</head>
				<body>
					<or>
						<and>
							<s pred="p4"><v>x</v></s>
							<s pred="p5"><v>x</v></s>
						</and>
						<and>
							<s pred="p6"><v>x</v></s>
							<s pred="p7"><v>x</v></s>
						</and>
						<s pred="p8"><v>x</v></s>
					</or>
				</body>
			</rule>
			<rule id="r21">
				<head>
					<s pred="p11"><v>z</v></s>
				</head>
				<body>
					<and>
						<s pred="p10"><v>x</v></s>
						<s pred="eval">
							<v>z</v>
							<s pred="reverse"><v>x</v></s>
						</s>
					</and>
				</body>
			</rule>
			<rule id="r22">
				<head>
					<s pred="taxable-income"><v>x</v><v>t</v></s>
				</head>
				<body>
					<and>
						<s pred="income"><v>x</v><v>i</v></s>
						<s pred="deductions"><v>x</v><v>d</v></s>
						<s pred="eval">
							<v>t</v>
							<s pred="-"><v>i</v><v>d</v></s>
						</s>
					</and>
				</body>
			</rule>
			
			<rule id="fact1">
				<head>
					<s pred="coins"><c>item1</c></s>
				</head>
			</rule>
			<rule id="fact2">
				<head>
