			<rule id="fact16">
				<head>
					<s pred="p10">
						<expr functor="list">
							<c>a</c>
							<c>b</c>
							<c>c</c>
							<c>d</c>
							<c>e</c>
						</expr>
					</s>
				</head>
			</rule>
			<rule id="fact17">
				<head>
					<s pred="income"><c>Sam</c><c>60000</c></s>
				</head>
			</rule>
			<rule id="fact18">
				<head>
					<s pred="deductions"><c>Sam</c><c>7000</c></s>
				</head>
			</rule>
        </rules>
    </theory>
	<argument-graphs>
